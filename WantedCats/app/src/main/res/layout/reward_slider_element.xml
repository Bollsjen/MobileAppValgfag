<?xml version="1.0" encoding="utf-8"?><!-- androidx.cardview.widget.CardView -->
<!-- https://material.io/components/cards/android#using-cards -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:checkable="true"
    android:clickable="true"
    app:cardBackgroundColor="@color/mtrl_chip_text_color"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    tools:ignore="TouchTargetSizeCheck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/reward_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/reward_checkmark"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:backgroundTint="@color/mtrl_chip_text_color"
            app:srcCompat="@drawable/ic_mtrl_chip_checked_circle" />

        <TextView
            android:id="@+id/reward_slider_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="3dp"
            android:text="TextView"
            android:textColor="#FFFFFF" />

        <SeekBar
            android:id="@+id/reward_slider"
            style="@style/Widget.AppCompat.SeekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:paddingTop="3dp"
            android:progressBackgroundTint="#FDFDFD"
            android:thumb="@android:drawable/presence_invisible" />

        <TextView
            android:id="@+id/reward_slider_max_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>